---
import AdminNavbarComponent from '@/components/admin/adminNav.component';
import '@/styles/globals.css'

import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

if (!Astro.cookies.has("token")){
	Astro.redirect("/auth")
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Meie+Script&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet"> -->

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ViewTransitions/>
	</head>
	<body class="flex flex-row w-full">
        <aside class="flex flex-col w-1/3 max-w-[340px] p-8 h-dvh sticky top-0 overflow-y-auto">
            <h1 class=" flex w-full font-black text-[#232323] text-3xl mb-6">ReservaYa</h1>
            <AdminNavbarComponent path={currentPath} client:load/>
        </aside>
        <div class=" flex flex-col w-full min-w-[66.666%] min-h-dvh">
            <header class=" flex flex-row w-full p-4 justify-end items-center">
                <!-- REACT COMPONENT -->
            </header>
            <main class=" flex flex-col w-full overflow-visible items-center">
                <slot />
            </main>
        </div>
	</body>
</html>

<style>
	body {
        background-color: #e2e2e2;
	}

	/* styles.css */
	.full-height {
	height: calc(var(--vh, 1vh) * 100);
	}

</style>